{
    "version": 8,
    "name": "Basic",
    "metadata": {
        "mapbox:autocomposite": true,
        "mapbox:type": "template"
    },
    "sources": {
        "mapbox": {
            "url": "mapbox://mapbox.mapbox-streets-v7",
            "type": "vector"
        }
    },
    "glyphs": "mapbox://fonts/mapbox/{fontstack}/{range}.pbf",
    "layers": [
        {
            "id": "background",
            "type": "background",
            "paint": {
                "background-color": "#ECE3D0",
                "background-opacity": 0.70
            }
        },
        {
            "id": "roads",
            "type": "line",
            "source": "jsonsource",
            "filter": [
                "all",
                [
                    "==",
                    "$type",
                    "LineString"
                ],
                [
                    "has",
                    "highway"
                ]
            ],
            "layout": {
                "visibility": "visible",
                "line-join": "round"
            },
            "paint": {
                "line-width": 2
            }
        },
        {
            "id": "roads-unpaved",
            "type": "line",
            "source": "jsonsource",
            "filter": [
                "all",
                [
                    "==",
                    "$type",
                    "LineString"
                ],
                [
                    "==",
                    "surface",
                    "unpaved"
                ]
            ],
            "layout": {
                "visibility": "visible",
                "line-join": "round"
            },
            "paint": {
                "line-color": "#A96207",
                "line-width": 2
            }
        },
        {
            "id": "buildings",
            "source": "jsonsource",
            "filter": ["has", "building"],
            "type": "fill",
            "minzoom": 10,
            "paint": {
                "fill-color": "#aaa"
            }
        },
        {
            "id": "3d-buildings",
            "source": "jsonsource",
            "filter": ["has", "building"],
            "type": "fill-extrusion",
            "minzoom": 15,
            "paint": {
                "fill-extrusion-color": "#aaa",
                "fill-extrusion-height": {
                    "type": "identity",
                    "property": "building:levels"
                },
                "fill-extrusion-base": {
                    "type": "identity",
                    "property": "min_height"
                },
                "fill-extrusion-opacity": 0.6
            }
        },
        {
            "id": "landuse-residential",
            "source": "jsonsource",
            "filter": ["==", "landuse", "residential"],
            "type": "fill",
            "paint": {
                "fill-color": "#C0C0C0",
                "fill-opacity": 0.75
            }
        },
        {
            "id": "landuse-green",
            "source": "jsonsource",
            "filter": ["in", "landuse", "forest", "grass"],
            "type": "fill",
            "paint": {
                "fill-color": "#388604",
                "fill-opacity": 0.75
            }
        },
        {
            "id": "landuse-cementery",
            "source": "jsonsource",
            "filter": ["==", "landuse", "cemetery"],
            "type": "fill",
            "paint": {
                "fill-color": "#2FB007",
                "fill-opacity": 0.75
            }
        },
        {
            "id": "labels",
            "type": "symbol",
            "source": "jsonsource",
            "filter": ["in",
                    "$type",
                    "LineString",
                    "Point",
                    "Polygon"],
            "layout": {
                "symbol-placement": "line",
                "text-field": "{name}",
                "text-font": [
                    "Open Sans Semibold",
                    "Arial Unicode MS Bold"
                ],
                "text-transform": "uppercase",
                "text-letter-spacing": 0.1,
                "text-offset": [
                    0,
                    0.5
                ],
                "text-size": {
                    "base": 1.4,
                    "stops": [
                        [
                            10,
                            8
                        ],
                        [
                            20,
                            14
                        ]
                    ]
                }
            },
            "paint": {
                "text-color": "#666",
                "text-halo-color": "rgba(255,255,255,0.75)",
                "text-halo-width": 1,
                "text-halo-blur": 1
            }
        }
    ]
}
